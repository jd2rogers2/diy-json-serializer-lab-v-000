<h1 class="name"><%= @product.name %></h1>
<ul>
  <li class="price"><%= @product.price %></li>
  <li class="description"><%= @product.description %></li>
  <li class="inventory"><%= @product.inventory %></li>
</ul>

<a href="#" class="js-next" data-id="<%= @product.id %>">Next Product</a>

<script type="text/javascript" charset="utf-8">
$(function(){
  $('.js-next').on("click", function(){
    var next_id = parseInt($('.js-next').attr('data-id')) + 1;
    $.get("/products/" + next_id + "/data", function(data){
      $('.name').text(JSON.parse(data)["name"]);
      $('.price').text(JSON.parse(data)["price"]);
      $('.description').text(JSON.parse(data)["description"]);
      $('.inventory').text(JSON.parse(data)["inventory"]);
      $('a').attr('data-id', next_id);
    })
  });
});
</script>